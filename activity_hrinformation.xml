<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".HRinformationActivity">

    <TextView
        android:id="@+id/text_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:text="이름"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/text_name"
        />

    <TextView
        android:id="@+id/text_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_name"
        android:layout_alignLeft="@+id/text_name"
        android:layout_marginTop="20dp"
        android:text="주소"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_addr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/edit_name"
        android:layout_alignBaseline="@+id/text_addr"
        android:layout_alignRight="@id/text_addr"
        android:layout_alignBottom="@+id/text_addr"
        android:layout_marginTop="-3dp"
        android:layout_marginRight="-218dp"
        android:layout_marginBottom="-12dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:maxLength="10" />

    <TextView
        android:id="@+id/text_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_addr"
        android:layout_alignLeft="@+id/text_addr"
        android:layout_marginTop="20dp"
        android:text="나이:"
        android:textSize="15dp" />

    <EditText
        android:id="@+id/edit_age"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_alignBaseline="@+id/text_age"
        android:layout_alignBottom="@+id/text_age"
        android:layout_alignRight="@+id/check_woman"
        android:layout_toRightOf="@+id/text_age" />

    <TextView
        android:id="@+id/text_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_age"
        android:layout_marginTop="20dp"
        android:text="전공"
        android:textSize="15dp"
        android:layout_alignLeft="@id/text_age"/>

    <EditText
        android:id="@+id/edit_major"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:maxLength="10"
        android:inputType="textPersonName"
        android:layout_toRightOf="@+id/text_major"
        android:layout_alignBaseline="@id/text_major"
        />

    <TextView
        android:id="@+id/text_gender"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_major"
        android:layout_alignLeft="@+id/text_age"
        android:layout_marginTop="20dp"
        android:text="성별:"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/check_man"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_gender"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/text_gender"
        android:text="남"
        android:textSize="15dp" />

    <CheckBox
        android:id="@+id/check_woman"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/text_gender"
        android:layout_alignBottom="@+id/text_gender"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@+id/check_man"
        android:text="여"
        android:textSize="15dp" />

    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:layout_below="@+id/text_gender"
        android:layout_marginTop="162dp"
        android:background="#AAAAAA" />


    <Button
        android:id="@+id/btn_select"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_alignBottom="@id/text_gender"
        android:layout_marginRight="161dp"
        android:layout_marginBottom="-70dp"
        android:layout_toRightOf="@id/text_name"
        android:background="#AFEEEE"
        android:text="View" />


    <Button
        android:id="@+id/btn_insert"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/btn_select"
        android:layout_alignRight="@id/line1"
        android:layout_alignBottom="@id/check_woman"
        android:layout_marginRight="163dp"
        android:layout_marginBottom="-81dp"
        android:background="#AFEEEE"
        android:text="Insert" />


</RelativeLayout>